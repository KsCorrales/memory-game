{
  "env": {
      "browser": true,
      "es2021": true,
      "vitest/globals": true
  },
  "extends": [
      "plugin:vue/essential",
      "google",
      "eslint:recommended",
      "plugin:prettier/recommended"
  ],
  "parser": "vue-eslint-parser",
  "parserOptions": {
      "ecmaVersion": 2021,
      "parser": "@typescript-eslint/parser",
      "sourceType": "module"
  },
  "plugins": [
      "vue",
      "@typescript-eslint",
      "tailwindcss",
      "vitest"
  ],
  "rules": {
      "semi": ["error", "always"],
      "no-unused-vars": "error",
      "no-extra-semi": "error",
      "eqeqeq": "error",
      "camelcase": "error",
      "tailwindcss/no-unknown-class": "error"

  }
}
